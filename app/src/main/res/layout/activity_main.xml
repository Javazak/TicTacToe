<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xokanachot"

    >

    <ImageView
        android:id="@+id/tictacimage"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/tictac" />

    <TextView
        android:id="@+id/screenOneTvOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="127dp"
        android:text="@string/razapp"
        android:textSize="60sp"
        android:textColor="#12C880"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/screenOneTvTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenOneTvOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-127dp"
        android:text="@string/edition"
        android:textColor="#FFF"
        android:textSize="50sp"
        android:textStyle="bold" />





</RelativeLayout>